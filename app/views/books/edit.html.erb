<h1>Editing Book</h1>
<!-- form_with部分 -->
  <% if @book.errors.any? %>
    <div class="error_box">
      <p class="error_head"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
      <ul class="error_list">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
  </br>
  
  <%= link_to "Show", book_path %>
  |
  <%= link_to "Back", books_path %>
<% end %>